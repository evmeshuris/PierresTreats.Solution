@model PierresTreats.Models.Flavor

<h2>Flavor's Details</h2>
<hr />
<h4>Flavor's @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>


@if(@Model.JoinEntities.Count == 0)
{
  <p>This flavor does not have treats</p>
}
else
{
  <h6>This flavor has these treats:</h6>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Treat.Name</li>
    @Html.ActionLink("Remove treat from a flavor", "RemoveTreat", null, new { flavorTreatId = join.FlavorTreatId}, new {@class="myCssClass"})
  }
  </ul>
}

<p>@Html.ActionLink("Add a Treat to this flavor", "AddTreat", null, new { id = Model.FlavorId }, new {@class="myCssClass"})</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId }, new {@class="myCssClass"})</p> 
<p>@Html.ActionLink("Delete Flavor", "Delete", null, new { id = Model.FlavorId }, new {@class="myCssClass"})</p>
<p>@Html.ActionLink("Back to the list of Flavors", "Index", null, null, new {@class="myCssClass"})</p>