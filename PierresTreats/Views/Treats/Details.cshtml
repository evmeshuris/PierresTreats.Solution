@model PierresTreats.Models.Treat

<h2>Treat's Details</h2>
<hr />
<h5>Treat @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name) </h5>

  @if(@Model.JoinEntities.Count == 0)
  {
    <p>This treat has no flavor yet</p>
  }
  else
  {
    <h5>This Treat has those flavors:</h5>
    <ul>
      @foreach (var join in Model.JoinEntities)
      {
        <li>@join.Flavor.Name</li>
        
        @Html.ActionLink("Remove Flavor from a treat", "RemoveFlavor", null, new { flavorTreatId = join.FlavorTreatId}, new {@class="myCssClass"})
      }
    </ul>
  }
<p>@Html.ActionLink("Add a Flavor", "AddFlavor", null, new { id = Model.TreatId }, new {@class="myCssClass"})</p>
<p>@Html.ActionLink("Edit Treat", "Edit", new { id = Model.TreatId }, new {@class = "myCssClass"})</p>
<p>@Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId }, new {@class = "myCssClass"})</p>
<p>@Html.ActionLink("Back to the list of Treats", "Index", null, null,  new {@class = "myCssClass"})</p> 