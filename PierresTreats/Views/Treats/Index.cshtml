@using PierresTreats.Models;

<h2>Treats:</h2>

@if (@Model.Count == 0)
{
  <h3>No treats added yet. Add below.</h3>
}

<ul>
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new treat", "Create", null, null,  new {@class = "myCssClass"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null,  new {@class = "myCssClass"})</p>